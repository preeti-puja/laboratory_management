<h1>Create Staff</h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for(@staff) do |f| %>
      <%= f.label :first_name %>
      <%= f.text_field :first_name %>

      <%= f.label :second_name %>
      <%= f.text_field :second_name %>

      <%= f.label :email %>
      <%= f.email_field :email %>

      <%= f.label :primary_number %>
      <%= f.text_field :primary_pnumber %>

      <%= f.label :secondary_number %>
      <%= f.text_field :secondary_pnumber %>

      <%= f.submit 'create staff', class: "btn btn-primary" %>
    <% end %>
  </div>
</div>